#include<iomanip>
#include<iostream>

using namespace std;

int main()
{
	const int limit2 = 100;
	char str1[limit2];
	char str2[limit2];
	cout << "\n Enter string";
	cin.get(str1, limit2);
	cout << "\n Enter the next string ended by $";
	cin.get(str2, limit2,'$');
	cout << "\n First string is" << str1;
	cout << "\n Final string is" << str2;
}