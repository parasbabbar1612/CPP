#include<iomanip>
#include<iostream>

using namespace std;

int main()
{
	const int limit = 10;
	const int limit2 = 100;
	char str[limit];
	char str1[limit2];
	char str2[limit2];
	cout << "\n Enter a string";
	cin >> setw(limit) >> str;
	cout << "\n Entered string is " << str;
	cout << "\n Enter the next string";
	cin.get(str1, limit2);
	cout << "\n Enter the next string ended by $";
	cin.get(str2, limit2,'$');
	cout << "\n Second string is" << str1;
	cout << "\n Final string is" << str2;
}